<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/lightGrey"
                android:endColor="@color/lightGrey"
                android:angle="270" />
            <stroke
                android:width="@dimen/custom_button_stroke_width"
                android:color="@color/red" />
            <corners
                android:radius="@dimen/custom_button_corner_radius" />
            <padding
                android:left="@dimen/custom_button_padding"
                android:top="@dimen/custom_button_padding"
                android:right="@dimen/custom_button_padding"
                android:bottom="@dimen/custom_button_padding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/lightGrey"
                android:startColor="@color/lightGrey"
                android:angle="270" />
            <stroke
                android:width="@dimen/custom_button_stroke_width"
                android:color="@color/red" />
            <corners
                android:radius="@dimen/custom_button_corner_radius" />
            <padding
                android:left="@dimen/custom_button_padding"
                android:top="@dimen/custom_button_padding"
                android:right="@dimen/custom_button_padding"
                android:bottom="@dimen/custom_button_padding" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="@color/white"
                android:startColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="@dimen/custom_button_stroke_width"
                android:color="@color/lightGrey" />
            <corners
                android:radius="@dimen/custom_button_corner_radius" />
            <padding
                android:left="@dimen/custom_button_padding"
                android:top="@dimen/custom_button_padding"
                android:right="@dimen/custom_button_padding"
                android:bottom="@dimen/custom_button_padding" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/white"
                android:startColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="@dimen/custom_button_stroke_width"
                android:color="@color/red" />
            <corners
                android:radius="@dimen/custom_button_corner_radius" />
            <padding
                android:left="@dimen/custom_button_padding"
                android:top="@dimen/custom_button_padding"
                android:right="@dimen/custom_button_padding"
                android:bottom="@dimen/custom_button_padding" />
        </shape>
    </item>
</selector>