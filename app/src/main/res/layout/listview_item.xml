<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:animateLayoutChanges="true"
    android:background="@color/lightGrey">

    <TableLayout android:id="@+id/tableLayout_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_bikes"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/textView_totalBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_total" />
            <TextView android:id="@+id/textView_totalBikes_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_gravity="end" />
            <TextView android:id="@+id/textView_availableBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widgets_standard_margin"
                android:layout_marginStart="@dimen/widgets_standard_margin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_availability"/>
            <TextView android:id="@+id/textView_availableBikes_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/textView_reservedBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_bookings" />
            <TextView android:id="@+id/textView_reservedBikes_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_gravity="end"/>
            <TextView android:id="@+id/textView_inUseBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widgets_standard_margin"
                android:layout_marginStart="@dimen/widgets_standard_margin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_occupied"/>
            <TextView android:id="@+id/textView_inUseBikes_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_gravity="end" />
        </TableRow>

        <TableRow
            android:paddingTop="@dimen/short_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_slots"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/textView_totalSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_total"/>
            <TextView android:id="@+id/textView_totalSlots_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_gravity="end" />
            <TextView android:id="@+id/textView_availableSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widgets_standard_margin"
                android:layout_marginStart="@dimen/widgets_standard_margin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_availability"/>
            <TextView android:id="@+id/textView_availableSlots_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:layout_gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/textView_reservedSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_bookings"/>
            <TextView android:id="@+id/textView_reservedSlots_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:layout_gravity="end" />
            <TextView android:id="@+id/textView_inUseSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widgets_standard_margin"
                android:layout_marginStart="@dimen/widgets_standard_margin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/text_occupied"/>
            <TextView android:id="@+id/textView_inUseSlots_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/itemList_textNumberMargin"
                android:layout_marginStart="@dimen/itemList_textNumberMargin"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_gravity="end" />
        </TableRow>
    </TableLayout>

    <TableRow android:id="@+id/tableRow_fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableLayout_data"
        android:layout_marginTop="@dimen/widgets_standard_margin"
        android:layout_centerHorizontal="true">

        <TextView android:id="@+id/textView_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:text="@string/text_fare" />

        <TextView android:id="@+id/textView_fareNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/itemList_textNumberMargin"
            android:layout_marginStart="@dimen/itemList_textNumberMargin"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_gravity="end" />
    </TableRow>


    <TextView android:id="@+id/textView_lastMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_below="@id/tableRow_fare"
        android:layout_marginTop="@dimen/widgets_standard_margin"
        android:text="@string/textView_lastMod"/>

    <TextView android:id="@+id/textView_lastModData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_toRightOf="@id/textView_lastMod"
        android:layout_toEndOf="@id/textView_lastMod"
        android:layout_below="@id/tableRow_fare"
        android:layout_marginTop="@dimen/widgets_standard_margin"
        android:layout_marginLeft="@dimen/itemList_textNumberMargin"
        android:layout_marginStart="@dimen/itemList_textNumberMargin" />

    <Button android:id="@+id/button_showMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_lastMod"
        android:layout_marginTop="@dimen/widgets_standard_margin"
        android:text="@string/button_showInMap"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/accentColor" />

</RelativeLayout>