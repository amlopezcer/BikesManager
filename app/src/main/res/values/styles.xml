<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="colorControlNormal">@color/secondaryTextColor</item>
        <item name="colorControlActivated">@color/accentColor</item>
        <item name="colorControlHighlight">@color/accentColor</item>
    </style>

    <!-- BottomSheet -->
    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/textIconsColor</item>
        <item name="android:textColorSecondary">@color/textIconsColor</item>
        <item name="android:textColorHint">@color/textIconsColor</item>
        <item name="bs_dialogBackground">@color/primaryColor</item>
    </style>


</resources>
