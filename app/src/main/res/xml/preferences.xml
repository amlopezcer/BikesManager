<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Connection data">
        <EditTextPreference
            android:key="username"
            android:title="User name"
            android:defaultValue=""/>

        <EditTextPreference
            android:key="server_address"
            android:title="Server address"
            android:defaultValue=""/>

        <EditTextPreference
            android:key="server_port"
            android:inputType="number"
            android:title="Server port"
            android:defaultValue="8080"/> <!-- Default port in Glassfish -->
    </PreferenceCategory>

</PreferenceScreen>